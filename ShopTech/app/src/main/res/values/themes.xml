<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopTech" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="buttonStyle">@style/CustomButton</item>

    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_logout</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>
    <declare-styleable name="CustomPassword">
        <attr name="useStrike" format="boolean" />
        <attr name="useValidate" format="boolean" />
    </declare-styleable>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="LabelStyle">
        <item name="android:background">@drawable/bg_label</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>