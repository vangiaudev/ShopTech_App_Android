<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:ignore="DisableBaselineAlignment">
    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imgGioHang"
            android:src="@drawable/ic_iphone"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnMin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:focusable="false"
                android:text="-"
                android:textStyle="bold"
                android:padding="0dp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnValue"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:text="10"
                android:textColor="#BD1F07"
                android:textSize="13sp"
                android:padding="0dp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btnMax"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:focusable="false"
                android:text="+"
                android:padding="0dp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lemonada_light"
            android:text="Tên sản phẩm"
            android:textColor="#FF9800"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/txtTenGioHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            android:text="Điện thoại iPhone 12 Pro Max 128GB"
            android:fontFamily="@font/cuprum"
            android:textAlignment="center"
            android:textColor="#100693"
            android:textSize="20sp" />
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemon"
                android:text="Giá: "
                android:textColor="#FF5722"
                tools:ignore="HardcodedText"/>
            <TextView
                android:text="30.900.000 đ"
                tools:ignore="HardcodedText"
                android:id="@+id/txtGiaGioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FF0051"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
