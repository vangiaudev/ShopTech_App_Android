<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LichSuMuaHangActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:background="#062BF8"
        app:titleTextColor="#FDFDFD"
        app:title="Lịch Sử Mua Hàng"
        android:id="@+id/tbLichSu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <ImageView
                android:visibility="invisible"
                android:layout_gravity="center|top"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="100dp"
                android:id="@+id/imgGioHangTrongLS"
                android:src="@drawable/ic_empty_cart_history"
                tools:ignore="ContentDescription" />
            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ban_chua_san_pham_nao"
                android:id="@+id/txtThongBaoLS"
                android:fontFamily="@font/cuprum"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#3F51B5"/>
            <ListView
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvLichSu">
            </ListView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>